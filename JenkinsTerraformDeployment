pipeline {
    agent any
    stages {
        stage('List Repo Content, Check Working Repo') {
            steps {
                sh 'ls'
                sh 'pwd'
            }
        }
        stage('Initializing Terraform Backend') {
            steps {
                sh 'terraform init'
            }
        }
        stage('Format Check & Plan') {
            steps {
                sh 'terraform fmt -check'
                sh 'terraform plan'
            }
        }
        stage('Apply Configurations') {
            steps {
                sh 'terraform apply'
            }
        }
        stage('Destroy Configuration') {
            steps {
                sh 'terraform destroy'
            }
        }
    }
}
