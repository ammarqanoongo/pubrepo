pipeline {
    agent any
    stages {
        stage('Changing Directory') {
            steps {
                sh 'ls'
                sh 'pwd'
            }
        }
        stage('Initializing Terraform Backend') {
            steps {
                sh '/usr/local/bin/terraform init'
            }
        }
        stage('Format Check & Plan') {
            steps {
                sh '/usr/local/bin/terraform fmt -check'
                sh '/usr/local/bin/terraform plan'
            }
        }
        stage('Apply Configurations') {
            steps {
                sh '/usr/local/bin/terraform apply'
            }
        }
        stage('Destroy Configuration') {
            steps {
                sh '/usr/local/bin/terraform destroy'
            }
        }
    }
}
