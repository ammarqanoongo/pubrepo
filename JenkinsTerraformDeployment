pipeline {
    agent any
    stages {
        stage('Install Terraform') {
            steps {
                sh 'brew upgrade'
                sh 'brew install terraform'
            }
        }
        stage('Changing Directory') {
            steps {
                sh 'cd /Users/ammarqanoongo/Documents/TerraformPipline'
            }
        }
        stage('Initializing Terraform Backend') {
            steps {
                sh 'terraform init'
            }
        }
        stage('Format Check & Plan') {
            steps {
                sh 'terraform fmt -check'
                sh 'terraform plan'
            }
        }
        stage('Apply Configurations') {
            steps {
                sh 'terraform apply'
            }
        }
        stage('Destroy Configuration') {
            steps {
                sh 'terraform destroy'
            }
        }
    }
}
